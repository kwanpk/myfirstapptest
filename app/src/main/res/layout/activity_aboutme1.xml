<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg10"
    tools:context="comsci.kwan.myfirstapp.Aboutme1">

    <TextView
        android:id="@+id/txtAboutme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/my_margin"
        android:text="@string/aboutMe"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/h1"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imvAboutme"
        android:layout_width="@dimen/my_picture"
        android:layout_height="@dimen/my_picture"
        android:layout_below="@id/txtAboutme"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/aboutme" />

    <Button
        android:id="@+id/btnAboutme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="clickBackAboutme"
        android:text="Back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnAboutme"
        android:layout_below="@id/imvAboutme"
        android:background="#c8ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_margin"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_marginTop="@dimen/my_margin"
                android:text="@string/name"
                android:textSize="@dimen/h2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_margin"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_marginTop="@dimen/my_margin"
                android:text="@string/IDname"
                android:textSize="@dimen/h2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_margin"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_marginTop="@dimen/my_margin"
                android:text="@string/Faulty"
                android:textSize="@dimen/h2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_margin"
                android:layout_marginRight="@dimen/my_margin"
                android:layout_marginTop="@dimen/my_margin"
                android:text="@string/phone"
                android:textSize="@dimen/h2" />

            <Button
                android:id="@+id/ibn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/my_margin"
                android:onClick="onClickfacebook"
                android:text="@string/faceebook"
                android:textColor="@android:color/holo_purple"
                android:textSize="@dimen/h2" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
